<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Edit Product</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->
        </div>
        <!-- Form Edit Product -->
        <div id="editProductModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form method="POST" action="/products/saveUpdate/{{product.masach}}?_method=PUT"
                        enctype="multipart/form-data">
                        <div class="modal-header">
                            <h4 class="modal-title">Update Product</h4>
                            <a href="/products">
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-hidden="true">&times;</button>
                            </a>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Tên Sách</label>
                                <input type="text" class="form-control" value="{{product.tensach}}" name="tensach" required>
                            </div>
                            <div class="form-group">
                                <label>Tác giả</label>
                                <input type="text" class="form-control" value="{{product.tacgia}}" name="tacgia" required>
                            </div>
                            <div class="form-group">
                                <label>Ngày xuất bản</label>
                                <select class="form-control" id="NXB" name="manxb">
                                    {{#each NXB}}
                                    {{{option this.manxb this.Ten ../product.manxb }}}
                                    {{/each}}
                                </select>
                            </div>
                            <div class="form-group-3">
                                <label>Giá</label>
                                <input type="number" class="form-control" value="{{product.gia}}" name="gia" required>
                            </div>
                            <div class="form-group mt-1">
                                <label for="des">Thể Loại</label>
                            <div class="container" style="border : 1px solid; ">
                                <div class="row p-2 ">
                                    {{#each Theloai}}
                                    {{{category this.maTL this.tenTL ../mytheloai}}}
                                    {{/each}}
                                </div>
                            </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <input type="submit" class="btn btn-info" value="Save">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- End Form Edit Product -->
    </div>
</div>